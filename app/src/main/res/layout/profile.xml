<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:id="@+id/background2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/background2"
    />
    <RelativeLayout
            android:id="@+id/bagianfoto"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    >
        <ImageView
                android:id="@+id/fotoProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/blankprofile"
                android:layout_marginTop="140dp"
                android:layout_centerHorizontal="true"
        />
        <RelativeLayout
                android:id="@+id/bagiannama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fotoProfile"
                android:layout_centerHorizontal="true"
        >
        <TextView
                android:id="@+id/txtNamaKader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Siti Aminah"
                android:gravity="center"
                android:fontFamily="@font/gotham_semibold"
                android:layout_centerHorizontal="true"
        />
            <ImageView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_toRightOf="@id/txtNamaKader"
                    android:src="@drawable/edit"
                    android:layout_marginLeft="5dp"
            />
        </RelativeLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kader UPT Puskesmas Limo"
                android:layout_below="@id/bagiannama"
                android:fontFamily="@font/gotham_light"
                android:textSize="10dp"
                android:textColor="#3fb286"
        />

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/inputEmailPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/bagianfoto"
            android:layout_marginTop="20dp"
    >
        <LinearLayout
                android:id="@+id/bagianEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
        >
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/amplop"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
            />
            <EditText
                    android:id="@+id/email"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="sitiaminah_grogol@gmail.com"
                    android:textSize="10sp"
                    android:fontFamily="@font/gotham_light"
            />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/bagianPassword"
                android:layout_below="@id/bagianEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
        >
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/lock"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
            />
            <EditText
                    android:id="@+id/password"
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:hint="test123"
                    android:inputType="textPassword"
                    android:textSize="10sp"
                    android:fontFamily="@font/gotham_light"
            />
            <ImageView
                    android:id="@+id/editPassword"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/edit"
                    android:layout_gravity="center"
            />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/infoPendataan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/inputEmailPass"
            android:layout_marginTop="25dp"
            android:gravity="center">
        <TextView
                android:id="@+id/andatelah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anda telah melakukan pendataan sebanyak:"
                android:fontFamily="@font/gotham_light"
                android:textSize="10sp"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/txtJumlahPendataan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/andatelah"
                android:text="540"
                android:textSize="12dp"
                android:fontFamily="@font/gotham_semibold"
                android:gravity="center"
                android:paddingLeft="5dp"
        />
        <TextView
                android:layout_toRightOf="@id/txtJumlahPendataan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kali"
                android:fontFamily="@font/gotham_light"
                android:textSize="10sp"
                android:gravity="center"
        />
        <TextView
                android:id="@+id/terakhirMelakukan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/andatelah"
                android:text="Terakhir melakukan pendataan:"
                android:fontFamily="@font/gotham_light"
                android:textSize="10sp"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/terakhirMelakukan"
                android:id="@+id/waktuPendataan"
                android:text="03/05/2019 10:39:19"
                android:layout_below="@id/andatelah"
                android:textSize="12sp"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/gotham_semibold"
        />
        <TextView
                android:id="@+id/bergabungpada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/terakhirMelakukan"
                android:text="Bergabung pada:"
                android:textSize="10sp"
                android:fontFamily="@font/gotham_light"
        />
        <TextView
                android:id="@+id/waktuBergabung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/bergabungpada"
                android:layout_below="@id/terakhirMelakukan"
                android:text="13/19/2019 09:49:12"
                android:textSize="12sp"
                android:fontFamily="@font/gotham_semibold"
        />

    </RelativeLayout>

    <Button
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/infoPendataan"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="LOGOUT"
            android:fontFamily="@font/gotham_semibold"
            android:textColor="#50b178"
            android:textSize="14sp"
            android:background="@drawable/logoutbutton"
            android:gravity="center"
    />

</android.support.constraint.ConstraintLayout>