<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_constraintCircleRadius="@dimen/roundness"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/roundness"
            android:elevation="@dimen/card_elevation"
            android:translationZ="@dimen/card_translationZ">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="10dp">

                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2">

                    <TextView
                            android:id="@+id/status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rumah Sehat"
                            android:fontFamily="@font/gotham_regular"
                            android:padding="5dp"
                            android:textSize="11sp"/>

                    <ImageView
                            android:layout_marginStart="5dp"
                            android:layout_centerInParent="true"
                            android:id="@+id/imgStatusRumah"
                            android:layout_width="40dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rumahtidaksehat"
                            android:layout_toEndOf="@+id/status"/>
                </RelativeLayout>
                <ImageView
                        android:layout_marginEnd="3dp"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:src="@drawable/time"
                />
                <TextView
                        android:padding="5dp"
                        android:id="@+id/lastUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:layout_marginEnd="7dp"
                        android:text="20/01/2019 10:15:00"
                        android:textSize="10sp"
                        android:fontFamily="@font/gotham_regular"/>


            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/garis"
            />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/buletbiru"
                            android:layout_marginLeft="5dp"
                            android:layout_gravity="center"/>
                    <LinearLayout
                            android:layout_marginStart="5dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:id="@+id/nama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Andi Wijaya"
                                android:textSize="13sp"
                                android:fontFamily="@font/gotham_semibold"
                        />
                        <TextView
                                android:id="@+id/nmrKK"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="1234567890"
                                android:textSize="11sp"
                                android:fontFamily="@font/gotham_regular"
                        />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:padding="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/location"
                            android:layout_gravity="center"/>
                    <TextView
                            android:layout_marginStart="5dp"
                            android:padding="5dp"
                            android:id="@+id/alamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jl. Raya blbla"
                            android:textSize="12sp"
                            android:fontFamily="@font/gotham_semibold"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>