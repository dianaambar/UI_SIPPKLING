<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/roundness"
        android:elevation="5dp"
        android:translationZ="5dp"

        android:layout_margin="10dp"
        >

   <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:backgroundTint="#ffffff">

       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

       <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginLeft="10dp">

           <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="2">

           <TextView
                   android:id="@+id/txtRumahSehat"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Rumah Sehat"
                   android:fontFamily="@font/gotham_regular"
                   android:padding="5dp"
                   android:textSize="14sp"

           />
           <ImageView
                   android:id="@+id/imgStatusRumah"
                   android:layout_toRightOf="@id/txtRumahSehat"
                   android:layout_width="40dp"
                   android:layout_height="25dp"
                   android:layout_gravity="center"
                   android:layout_marginTop="7dp"
                   android:src="@drawable/rumahtidaksehat"
           />
           </RelativeLayout>
           <ImageView
                   android:layout_width="15dp"
                   android:layout_height="15dp"
                   android:layout_gravity="center"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="3dp"
                   android:src="@drawable/time"
                   android:layout_marginTop="3dp"
           />
           <TextView
                   android:id="@+id/txtWaktuUpdate"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight=""
                   android:gravity="end"
                   android:layout_marginRight="7dp"
                   android:text="20/01/2019 10:15:00"
                   android:textSize="9sp"
                   android:fontFamily="@font/gotham_regular"
           />


       </LinearLayout>
       <ImageView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:src="@drawable/garis"
       />
           <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_marginLeft="10dp">

           <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"

           >
               <ImageView
                       android:layout_width="24dp"
                       android:layout_height="24dp"
                       android:src="@drawable/buletbiru"
                       android:layout_margin="5dp"
                       android:layout_gravity="center"
               />
               <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
               <TextView
                       android:id="@+id/txtNamaKepalaKeluarga"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="7dp"
                       android:layout_marginLeft="13dp"
                       android:text="Andi Wijaya"
                       android:textSize="14sp"
                       android:fontFamily="@font/gotham_semibold"
               />
                   <TextView
                           android:id="@+id/txtNomorKK"
                           android:layout_marginLeft="13dp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="1234567890"
                           android:textSize="12sp"
                           android:fontFamily="@font/gotham_regular"
                   />
               </LinearLayout>
           </LinearLayout>

               <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal">
                   <ImageView
                           android:layout_width="24dp"
                           android:layout_height="24dp"
                           android:src="@drawable/location"
                           android:layout_margin="5dp"
                           android:layout_gravity="center"
                   />
                   <TextView
                           android:id="@+id/txtAlamatRumah"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="5dp"
                           android:layout_marginLeft="13dp"
                           android:text="Jl. Raya blbla"
                           android:textSize="14sp"
                           android:fontFamily="@font/gotham_semibold"
                   />
               </LinearLayout>
           </LinearLayout>
       </LinearLayout>

   </RelativeLayout>

</android.support.v7.widget.CardView>