<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:fitsSystemWindows="true"
            android:background="@drawable/background"
    />

    <RelativeLayout
            android:id="@+id/infoKategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/cardKategori"
            android:gravity="center"
    >
        <ImageView
                android:id="@+id/imgKategori"
                android:padding="7dp"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/rumahsehaticon"
                android:background="@drawable/bulet"
                android:backgroundTint="#c26c6c6c"
        />
        <LinearLayout
                android:layout_toRightOf="@id/imgKategori"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
        >
        <TextView
                android:text="Kategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1c8572"
                android:textSize="10sp"
                android:fontFamily="@font/gotham_light"
        />
            <TextView
                    android:text="Rumah Sehat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1c8572"
            />

        </LinearLayout>

        </RelativeLayout>
    <android.support.v7.widget.CardView
            android:id="@+id/cardKategori"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/infoKategori"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            app:contentPadding="10dp"
    >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
        >
            <LinearLayout
                    android:id="@+id/infoKepalaKeluarga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="5dp"
            >
                <ImageView
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/profileicon"
                        android:layout_gravity="center"
                />
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/nkk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Kepala Keluarga"
                            android:textColor="#1c8572"
                            android:fontFamily="@font/gotham_light"
                            android:textSize="10dp"
                    />
                    <TextView
                            android:layout_below="@id/nkk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Andi Wijaya"
                            android:textSize="11sp"
                    />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_below="@id/infoKepalaKeluarga"
                    android:id="@+id/infoNomorKK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageView
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/nomorkk"
                />
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/nokk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Kepala Keluarga"
                            android:textColor="#1c8572"
                            android:fontFamily="@font/gotham_light"
                            android:textSize="10dp"
                    />
                    <TextView
                            android:id="@+id/nomorKK"
                            android:layout_below="@id/nokk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="317401029930014"
                            android:textSize="11sp"
                    />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_below="@id/infoNomorKK"
                    android:id="@+id/infoAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageView
                        android:layout_weight="2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/location"
                />
                <RelativeLayout
                        android:layout_weight="3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/txtAlamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Kepala Keluarga"
                            android:textColor="#1c8572"
                            android:fontFamily="@font/gotham_light"
                            android:textSize="10dp"
                    />
                    <TextView
                            android:id="@+id/namaJalan"
                            android:layout_below="@id/txtAlamat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jl. Swasembada1 no.5"
                            android:textSize="11sp"
                    />
                    <TextView
                            android:id="@+id/noRTRW"
                            android:layout_below="@id/namaJalan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rt. 004 Rw. 05 No. 15"
                            android:textSize="11sp"
                    />
                    <TextView
                            android:id="@+id/kelurahanKecamatan"
                            android:layout_below="@id/noRTRW"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kel. Grogol, Kec. Limo, Depok"
                            android:textSize="11sp"
                    />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageView
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_height="20dp"
                        android:layout_gravity="center"
                        android:src="@drawable/skorakhiricon"
                />
                <RelativeLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/sa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skor Akhir/Status"
                            android:textColor="#1c8572"
                            android:fontFamily="@font/gotham_light"
                            android:textSize="10dp"
                    />
                    <TextView
                            android:id="@+id/SkorAkhir"
                            android:layout_below="@id/sa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-6.261204"
                            android:textSize="11sp"
                    />
                    <TextView
                            android:id="@+id/garismiring"
                            android:layout_toRightOf="@id/SkorAkhir"
                            android:layout_below="@id/sa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="11sp"
                    />
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/status"
                            android:layout_toRightOf="@id/garismiring"
                            android:layout_below="@id/sa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="Rumah Tidak Sehat"
                            android:textSize="11sp"
                    />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >
                <ImageView
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/titikkoordinat"
                />
                <RelativeLayout
                        android:layout_weight="2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/tk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Titik Koordinat"
                            android:textColor="#1c8572"
                            android:fontFamily="@font/gotham_light"
                            android:textSize="10dp"
                    />
                    <TextView
                            android:id="@+id/titikKoordinatX"
                            android:layout_below="@id/tk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-6.261204"
                            android:textSize="11sp"
                    />
                    <TextView
                            android:id="@+id/koma"
                            android:layout_toRightOf="@id/titikKoordinatX"
                            android:layout_below="@id/tk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=","
                            android:textSize="11sp"
                    />
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/titikKoordinatY"
                            android:layout_toRightOf="@id/koma"
                            android:layout_below="@id/tk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-6.261204"
                            android:textSize="11sp"
                    />

                </RelativeLayout>

            </LinearLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/logoutbutton"
                    android:padding="4dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
            >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/directme"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                    />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Direct Me"
                        android:textSize="10dp"
                        android:textColor="#1c8572"
                        android:layout_centerInParent="true"
                />

            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:background="@drawable/editbg"
                    android:backgroundTint="#1c8572"
                    android:padding="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
            >
                <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/edit"
                        android:tint="#ffffff"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Data"
                        android:textSize="10dp"
                        android:textColor="#ffffff"
                        android:layout_centerInParent="true"
                />

            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>