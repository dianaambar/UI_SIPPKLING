<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fitsSystemWindows="true"
    />
    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">


            <ImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:fitsSystemWindows="true"
                    android:background="@drawable/background"
            />
            <LinearLayout
                    android:id="@+id/infoCuaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/cardHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
            >
            <ImageView
                    android:id="@+id/imgCuaca"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cuaca"
                    android:layout_marginBottom="20dp"
            />
            <TextView
                    android:id="@+id/txtSuhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:fontFamily="@font/gotham_semibold"
                    android:textColor="#1c8572"
                    android:textSize="19dp"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="7dp"
            />
                <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/derajat"
                        android:layout_marginTop="6dp"
                />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                    android:id="@+id/cardHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="7dp"
                    android:layout_marginTop="90dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/infoCuaca"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
            >
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                    >
                    <RelativeLayout
                            android:id="@+id/infoKader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    >
                        <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="20dp"
                        >
                            <TextView
                                    android:id="@+id/txtNamaKaderHome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Siti Aminah"
                                    android:fontFamily="@font/gotham_semibold"
                            />
                            <TextView
                                    android:id="@+id/txtNamaLokasiKaderHome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kader UPT Puskesmas Limo"
                                    android:fontFamily="@font/gotham_light"
                                    android:textSize="8sp"
                                    android:textColor="#3fb286"
                            />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingLeft="20dp"
                                android:paddingTop="20dp"
                                android:gravity="end"
                                android:layout_marginRight="20dp"
                        >
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                            >
                                <TextView
                                        android:id="@+id/txtJumlahBerapaKaliHome"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="540"
                                        android:fontFamily="@font/gotham_semibold"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="x Pendataan"
                                        android:fontFamily="@font/gotham_light"
                                        android:textSize="11sp"
                                        android:gravity="center"
                                />
                                <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/panah"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                />

                            </LinearLayout>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Profil Kader"
                                    android:fontFamily="@font/gotham_light"
                                    android:textSize="8sp"
                                    android:textColor="#3fb286"
                                    android:layout_marginRight="20dp"
                            />

                        </LinearLayout>

                    </RelativeLayout>


                    <ImageView
                            android:id="@+id/garis"
                            android:layout_width="250dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/infoKader"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/garis"
                    />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp"
                    >
                        <RelativeLayout
                                android:id="@+id/bagianNotif"
                                android:layout_width="35dp"
                                android:layout_height="80dp"
                                android:layout_marginLeft="25dp"
                                android:layout_weight="1"
                        >
                            <ImageView
                                    android:id="@+id/imgNotif"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/notifications"
                                    android:layout_marginTop="6dp"
                            />
                            <TextView
                                    android:id="@+id/txtJumlahPesan"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:text="1"
                                    android:textColor="#ffffff"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:fontFamily="@font/gotham_medium"
                                    android:background="@drawable/bulet"
                                    android:backgroundTint="#3ade45"
                                    android:layout_marginLeft="32dp"


                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgNotif"
                                    android:text="Pesan"
                                    android:fontFamily="@font/gotham_regular"
                                    android:textSize="11sp"
                                    android:layout_marginLeft="5dp"
                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:id="@+id/bagianRiwayat"
                                android:layout_width="75dp"
                                android:layout_height="80dp"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                        >
                            <ImageView
                                    android:id="@+id/imgRiwayatPendataan"
                                    android:layout_width="45dp"
                                    android:layout_marginLeft="33dp"
                                    android:layout_height="45dp"
                                    android:layout_marginTop="6dp"
                                    android:src="@drawable/riwayat_pendataan"
                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Riwayat Pendataan"
                                    android:textSize="11sp"
                                    android:fontFamily="@font/gotham_regular"
                                    android:layout_below="@id/imgRiwayatPendataan"
                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:id="@+id/bagianReward"
                                android:layout_width="wrap_content"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                        >
                            <ImageView
                                    android:id="@+id/imgReward"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/reward"
                                    android:layout_marginTop="6dp"
                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reward"
                                    android:layout_below="@id/imgReward"
                                    android:fontFamily="@font/gotham_regular"
                                    android:textSize="11dp"
                            />


                        </RelativeLayout>


                    </LinearLayout>
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:id="@+id/bagianInfoKecil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cardHeader"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
            >
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logo_depok"
                />
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                >
                <TextView
                        android:id="@+id/txtSippKling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIPP KLING"
                        android:fontFamily="@font/gotham_semibold"
                        android:textSize="15sp"
                />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtSippKling"
                            android:text="Sistem Informasi Pemetaan Profil Lingkungan"
                            android:textSize="9sp"
                            android:fontFamily="@font/gotham_light"
                    />
                </RelativeLayout>
            
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/listSubMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bagianInfoKecil"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:overScrollMode="never"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            >

            </androidx.recyclerview.widget.RecyclerView>

        </android.support.constraint.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>