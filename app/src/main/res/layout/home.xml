<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:fitsSystemWindows="true"
>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fitsSystemWindows="true"
    />
    <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
    >
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">


            <ImageView
                    android:id="@+id/background"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:fitsSystemWindows="true"
                    android:background="@drawable/background"
            />
            <LinearLayout
                    android:id="@+id/infoCuaca"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/cardHeader"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp"
            >
            <ImageView
                    android:id="@+id/imgCuaca"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/cuaca"
            />
            <TextView
                    android:id="@+id/txtSuhu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15"
                    android:fontFamily="@font/gotham_semibold"
                    android:textColor="#1c8572"
                    android:textSize="19dp"
                    android:layout_marginLeft="7dp"
            />
                <ImageView
                        android:layout_width="7dp"
                        android:layout_height="7dp"
                        android:src="@drawable/derajat"
                        android:layout_marginTop="6dp"
                />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                    android:id="@+id/cardHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="7dp"
                    android:layout_marginTop="90dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/infoCuaca"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
            >
                <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                    >
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="10dp"
                            android:gravity="center"
                    >
                        <LinearLayout
                                android:id="@+id/infoKader"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerVertical="true"
                        >
                            <TextView
                                    android:id="@+id/txtNamaKaderHome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Siti Aminah"
                                    android:fontFamily="@font/gotham_semibold"
                            />
                            <TextView
                                    android:id="@+id/txtNamaLokasiKaderHome"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Kader UPT Puskesmas Limo"
                                    android:fontFamily="@font/gotham_light"
                                    android:textSize="8sp"
                                    android:textColor="#3fb286"
                            />
                        </LinearLayout>
                        <LinearLayout
                                android:layout_toEndOf="@id/infoKader"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="end"
                                android:layout_marginLeft="20dp"
                        >
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                            >
                                <TextView
                                        android:id="@+id/txtJumlahBerapaKaliHome"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="540"
                                        android:fontFamily="@font/gotham_semibold"
                                />
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:text="x Pendataan"
                                        android:fontFamily="@font/gotham_light"
                                        android:textSize="11sp"
                                        android:gravity="center"
                                />
                                <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:src="@drawable/panah"
                                        android:layout_marginLeft="5dp"
                                        android:layout_gravity="center"
                                />

                            </LinearLayout>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Profil Kader"
                                    android:fontFamily="@font/gotham_light"
                                    android:textSize="8sp"
                                    android:textColor="#3fb286"
                                    android:layout_marginRight="20dp"
                            />

                        </LinearLayout>

                    </RelativeLayout>


                    <ImageView
                            android:id="@+id/garis"
                            android:layout_width="250dp"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="@id/infoKader"
                            android:src="@drawable/garis"
                    />
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center"
                    >
                        <RelativeLayout
                                android:id="@+id/bagianNotif"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center"
                        >
                            <ImageView
                                    android:id="@+id/imgNotif"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/notifications"
                                    android:layout_centerInParent="true"
                            />

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/imgNotif"
                                    android:text="Pesan"
                                    android:fontFamily="@font/gotham_regular"
                                    android:textSize="11sp"
                                    android:layout_centerInParent="true"
                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:id="@+id/bagianRiwayat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_gravity="center"
                                android:gravity="center"
                        >
                            <ImageView
                                    android:id="@+id/imgRiwayatPendataan"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/riwayat_pendataan"
                                    android:layout_centerHorizontal="true"
                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Riwayat Pendataan"
                                    android:textSize="11sp"
                                    android:fontFamily="@font/gotham_regular"
                                    android:layout_below="@id/imgRiwayatPendataan"
                                    android:layout_centerHorizontal="true"

                            />

                        </RelativeLayout>
                        <RelativeLayout
                                android:id="@+id/bagianReward"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:layout_gravity="center"
                        >
                            <ImageView
                                    android:id="@+id/imgReward"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:src="@drawable/reward"
                                    android:layout_centerInParent="true"
                            />
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reward"
                                    android:layout_below="@id/imgReward"
                                    android:fontFamily="@font/gotham_regular"
                                    android:textSize="11dp"
                                    android:layout_centerInParent="true"
                            />


                        </RelativeLayout>


                    </LinearLayout>
                    </LinearLayout>

                </android.support.constraint.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:id="@+id/bagianInfoKecil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/cardHeader"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
            >
                <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/logo_depok"
                />
                <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                >
                <TextView
                        android:id="@+id/txtSippKling"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SIPP KLING"
                        android:fontFamily="@font/gotham_semibold"
                        android:textSize="15sp"
                />
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtSippKling"
                            android:text="Sistem Informasi Pemetaan Profil Lingkungan"
                            android:textSize="9sp"
                            android:fontFamily="@font/gotham_light"
                    />
                </RelativeLayout>
            
            </LinearLayout>

                <LinearLayout
                        android:id="@+id/baris1"
                        app:layout_constraintTop_toBottomOf="@id/bagianInfoKecil"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="10dp"
                >
                    <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:id="@+id/buttonRumahSehat"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="13dp"
                            app:cardElevation="8dp"
                            app:contentPadding="5dp"
                            android:layout_margin="7dp"
                    >
                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                        >
                            <ImageView
                                    android:id="@+id/imgRumahSehat"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/rumahsehaticon"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toTopOf="@id/txtRumahSehat"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintVertical_chainStyle="packed"
                            />
                            <TextView
                                    android:id="@+id/txtRumahSehat"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/imgRumahSehat"
                                    android:text="@string/rumahsehat"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:fontFamily="@font/gotham_light"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    android:textSize="8sp"
                                    android:gravity="center"
                            />

                        </android.support.constraint.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:id="@+id/buttonKesling"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="13dp"
                            app:cardElevation="8dp"
                            app:contentPadding="2dp"
                            android:layout_margin="7dp"
                    >
                        <android.support.constraint.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                        >
                            <ImageView
                                    android:id="@+id/imgPelayananLingkungan"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/kesehatanlingkungan"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintBottom_toTopOf="@id/txtKesLing"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintVertical_chainStyle="packed"
                            />
                            <TextView
                                    android:id="@+id/txtKesLing"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/imgPelayananLingkungan"
                                    android:text="@string/kesling"
                                    android:fontFamily="@font/gotham_light"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    android:textSize="8sp"
                                    android:gravity="center"
                            />

                        </android.support.constraint.ConstraintLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:layout_weight="1"
                            android:id="@+id/buttonRestaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="13dp"
                            app:cardElevation="8dp"
                            app:contentPadding="5dp"
                            android:layout_margin="7dp"
                    >
                        <android.support.constraint.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                        >
                            <ImageView
                                    android:id="@+id/imgRumahMakan"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/rumahmakanrestaurant"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintVertical_chainStyle="packed"/>
                            <TextView
                                    android:id="@+id/txtRumahMakan"
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintTop_toBottomOf="@id/imgRumahMakan"
                                    android:text="@string/rumahmakan"
                                    android:gravity="center"
                                    android:fontFamily="@font/gotham_light"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    android:textSize="8sp"
                            />

                        </android.support.constraint.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>
            <LinearLayout
                    app:layout_constraintTop_toBottomOf="@id/baris1"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
            >
                <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonSekolah"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="8dp"
                        app:contentPadding="3dp"
                        android:layout_margin="7dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:id="@+id/imgSekolah"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/sekolah"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtSekolah"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"
                        />
                        <TextView
                                android:id="@+id/txtSekolah"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgSekolah"
                                android:text="@string/sekolah"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="8sp"
                                android:gravity="center"
                        />

                    </android.support.constraint.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonPasar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="8dp"
                        app:contentPadding="3dp"
                        android:layout_margin="7dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:id="@+id/imgPasar"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pasar"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toTopOf="@id/txtPasar"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"
                        />
                        <TextView
                                android:id="@+id/txtPasar"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgPasar"
                                android:text="@string/pasar"
                                android:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="8sp"
                                android:gravity="center"
                        />

                    </android.support.constraint.ConstraintLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                        android:layout_weight="1"
                        android:id="@+id/buttonLainnya"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="13dp"
                        app:cardElevation="8dp"
                        app:contentPadding="5dp"
                        android:layout_margin="5dp"
                >
                    <android.support.constraint.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                    >
                        <ImageView
                                android:id="@+id/imgLainnya"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/lainnnya"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintVertical_chainStyle="packed"/>
                        <TextView
                                android:id="@+id/txtLainnya"
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/imgLainnya"
                                android:text="Lainnya"
                                android:gravity="center"
                                android:fontFamily="@font/gotham_light"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                android:textSize="8sp"
                        />

                    </android.support.constraint.ConstraintLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </android.support.constraint.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>